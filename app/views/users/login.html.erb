<h1>Sign In</h1>

<%= form_tag("/session", action: "create") do %>
  <p>
    <%= label_tag(:email) %>:
    <%= text_field_tag(:email) %>
  </p>
  <p>
    <%= label_tag(:password) %>:
    <%= password_field_tag(:password) %>
  </p>
  <p>
    <%= submit_tag("Login") %>
  </p>
<% end %>
<p>
  Don't have an account? <%= link_to "Create one!", new_user_path %>
</p>
